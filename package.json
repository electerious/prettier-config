{
  "name": "@electerious/prettier-config",
  "version": "4.0.0",
  "description": "Prettier configuration for my personal projects",
  "keywords": [
    "prettier",
    "config",
    "format",
    "formatter"
  ],
  "homepage": "https://github.com/electerious/prettier-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/electerious/prettier-config.git"
  },
  "license": "MIT",
  "type": "module",
  "main": "src/index.js",
  "files": [
    "src"
  ],
  "scripts": {
    "eslint": "eslint '**/*.js'",
    "format": "npm run eslint -- --fix && npm run prettier -- --write",
    "lint": "npm run eslint && npm run prettier -- --check",
    "prettier": "prettier --ignore-path .gitignore '**/*.{js,json,md,yml}'",
    "test": "npm run lint && node --test"
  },
  "prettier": "./src/index.js",
  "dependencies": {
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prettier-plugin-packagejson": "^2.5.19"
  },
  "devDependencies": {
    "@electerious/eslint-config": "^5.0.0",
    "eslint": "^9.33.0",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "prettier": ">=3.0.0"
  },
  "engines": {
    "node": ">=22"
  },
  "authors": [
    "Tobias Reich <tobias@electerious.com>"
  ]
}
